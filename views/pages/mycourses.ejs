<html lang="en">

    <head>
        <%- include('../partials/head') %>
    </head>

    <body>
        <%- include('../partials/nav') %>
        <main class="main">
            <div class="card-container">
                <div class="card">
                    <div class="card__header">
                        <div class="card__picture">
                            <div class="card__picture-overlay">&nbsp;</div><img class="card__picture-img" src="/img/" alt="" />
                        </div>
                        <h3 class="heading-tertirary"><span>Course</span></h3>
                    </div>
                    <div class="card__details">
                        <h4 class="card__sub-heading">-day tour</h4>
                        <p class="card__text">tour.summary</p>
                        <div class="card__data"><svg class="card__icon">
                                <use xlink:href="/img/icons.svg#icon-map-pin"></use>
                            </svg><span>tour.startLocation.description</span></div>
                        <div class="card__data"><svg class="card__icon">
                                <use xlink:href="/img/icons.svg#icon-calendar"></use>
                            </svg><span>From Now</span></div>
                        <div class="card__data"><svg class="card__icon">
                                <use xlink:href="/img/icons.svg#icon-flag"></use>
                            </svg><span>stops</span></div>
                        <div class="card__data"><svg class="card__icon">
                                <use xlink:href="/img/icons.svg#icon-user"></use>
                            </svg><span> people</span></div>
                    </div>
                    <div class="card__footer">
                        <p><span class="card__footer-value"></span> <span class="card__footer-text">per person</span></p>
                        <p class="card__ratings"><span class="card__footer-value">tour.ratingsAverage</span> <span class="card__footer-text">rating ()</span></p><a class="btn btn--green btn--small" href="/tour/">Details</a>
                    </div>
                </div>
            </div>
        </main>
        <%- include('../partials/footer') %>
    </body>

    <script src='/js/logout.js'>
    </script>

</html>
